{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "rootDir": "../../../../..",
    "traceResolution": true,
    "strict": true
  },
  "include": [
    "src"
  ]
}
